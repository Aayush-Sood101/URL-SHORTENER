<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body{
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        table{
            width: 70%;
        }
        div{
            padding:10px;
        }
        h1{
            text-align: center;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <h1>URL SHORTENER</h1>
    <div>
        <form action="/url" method ="POST">
            <label for="enter-url">Enter URL: </label>
            <input type="text" name = "url" id="enter-url" placeholder="http://www.example.com">
            <button type="submit">Generate</button>
        </form>
    </div>
    <% if (locals.id) { %>
     <p>Generate shortURL: https://localhost:8001/shortid/<%= id %></p>
    <% } %>
    <div>
        <% if (locals.urls) { %>
         <table border="2">
            <caption>DATABASE DETAILS</caption>
            <thead>
                <tr>
                    <th>S.No.</th>
                    <th>ShortId</th>
                    <th>Redirect</th>
                    <th>Redirection Link</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach((url , index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= url.shortId %></td>
                    <td><%= url.redirectURL %></td>
                    <td>http://localhost:8001/shortid/<%= url.shortId %></td>
                    <td><%= url.visitHistory.length %></td>
                </tr>
                <% }) %>
            </tbody>
         </table>
        <% } %>
    </div>
</body>
</html>